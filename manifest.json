{
    "name": "Screenshot extension",
    "version": "1.0",
    "description": "Building a screenshot taking extension",
    "background": {
        "scripts": [
            "background.js",
            "background.badgeText.js",
            "background.common.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "http://127.0.0.1:3000/*",
        "storage",
        "tabs",
        "tabCapture",
        "<all_urls>",
        "identity"
    ],
    "browser_action":{  
        "default_icon":"images/main-icon.png",
        "default_title":"Record Your Screen, Tab or Camera",
        "default_popup": "dropdown.html"
     },
    "manifest_version": 2
}